<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HampterWombat.MainPage"
             xmlns:viewmodel="clr-namespace:HampterWombat.ViewModels"
             xmlns:common="clr-namespace:HampterWombat.Common"
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions="2*, 6*, 1*" RowSpacing="55"
        Padding="10,10">
        <Frame BackgroundColor="#558855" CornerRadius="15">
            <VerticalStackLayout>
                <Label
                    Text="DVB" FontSize="24"
                    TextColor="#cca700"
                    Style="{StaticResource SubHeadline}" />
                <common:BalanceLabel
                    Text="{Binding DovboData.Balance}"
                    TextColor="#ffd700"
                    TextChanged="BalanceLabel_TextChanged"
                    FontSize="50" FontAttributes="Bold"
                    Style="{StaticResource Headline}" />
            </VerticalStackLayout>
        </Frame>

        <ImageButton Grid.Row="1" Source="wombat.jpg" HeightRequest="305"
            Aspect="AspectFill" ZIndex="1"
            Command="{Binding IncrementCountCommand}"/>

        <Button Grid.Row="2" HeightRequest="100" Text="Buy boosters"
            x:Name="BoosterBtn" Clicked="BoosterBtn_Clicked" />

        <Frame Grid.Row="1" BackgroundColor="#446677" CornerRadius="15"
               IsVisible="Collapse" IsEnabled="False" x:Name="ShopFrame" ZIndex="2">
            <VerticalStackLayout Spacing="20">
                <Label HorizontalOptions="Center"
                    Text="Increase tap price using Dovboyob coins!" FontSize="30"
                    TextColor="#cca700" LineBreakMode="WordWrap"/>
                <Frame BackgroundColor="#226677" CornerRadius="12">
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label 
                            Text="Current tap price: " FontSize="18"
                            TextColor="#cca700" />
                        <Label
                            Text="{Binding DovboData.ClickValue}" FontSize="18"
                            TextColor="#cca700" />
                    </HorizontalStackLayout>
                </Frame>
                <Frame BackgroundColor="#226677" CornerRadius="12">
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label x:Name="PropositionLabel" LineBreakMode="WordWrap"                            
                            Text="+X to tap price just for XX DVB!" FontSize="22"
                            TextColor="#cca700" />
                        <Button Text="Upgrade now" Padding="10" MinimumHeightRequest="60"
                            x:Name="BuyBtn" Clicked="BuyBtn_Clicked"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Frame>
    </Grid>

</ContentPage>
